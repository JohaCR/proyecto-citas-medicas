<table class="table">
    <thead>
    <tr>
        <th scope="col">ID Cita</th>
        <th scope="col">Fecha</th>
        <th scope="col">Estado</th>
        <th scope="col">Consultorio</th>
        <th scope="col">Id Paciente</th>
        <th scope="col">Nombre Paciente</th>
        <th scope="col">Id Doctor</th>
        <th scope="col">Nombre Doctor</th>



    </tr>
    </thead>
    <tbody  async="true">
    <%     citas.forEach( (cita) => {%>
        <tr>
            <th scope="row"><%= cita.id%></th>
            <td><%= cita.fechaCita%></td>
            <td><%= cita.estado%></td>
            <td><%= cita.consultorio%></td>
            <td><%= cita.paciente.id%></td>
            <td><%= cita.paciente.nombre%></td>
            <td><%= cita.doctor.id%></td>
            <td><%= cita.doctor.nombre%></td>
            <td>
                <td>
                    <a>
                        <form action="/cita/cancelar-cita/<%= cita.id %>/<%=cita.doctor.id%>"
                              method="POST">
                            <button type="submit"
                                    class="btn btn-info">
                                Cancelar Cita
                            </button>
                        </form>
                    </a>
                </td>
                <td>
                    <a>
                        <form action="/cita/cita-realizada/<%= cita.id %>/<%=cita.doctor.id%>"
                              method="POST">
                            <button type="submit"
                                    class="btn btn-info">
                                Cita Realizada
                            </button>
                        </form>
                    </a>
                </td>
                <td>
                    <a href="/detalle/mostrar-detalle-historial/<%= cita.paciente.id %>">
                        <button type="button"
                                class="btn btn-info">
                            Historial Paciente
                        </button>
                    </a>
                </td>

            </td>
        </tr>
    <%}); %>
    </tbody>
</table>
