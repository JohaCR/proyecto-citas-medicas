<%- include('../shared-views/header')%>
<div class="container">

    <% if(datos.mensaje){ %>
        <div class="alert alert-primary" role="alert">
            <%= datos.mensaje %>
        </div>
    <% } %>

    <% if(datos.error){ %>
        <div class="alert alert-danger" role="alert">
            <%= datos.error %>
        </div>
    <%
    }
    %>

    <h1>Lista de Citas </h1>
    <a href="/cita/crear-cita">
        <button type="button"
                class="btn btn-info">
            Crear cita
        </button>
    </a>

    <form action="/cita/buscar-citas"
          method="GET">
        <div>
            <label for="consultaID">Buscar Cita</label>
            <input id="consultaID"
                   type="text"
                   placeholder="EJ: 0751010414 o Joha"
                   title="Ingresar busqueda por nombre o por cedula"
                   name="consultaCita"
                   class="form-control">
            <small id="cedulaIDHelp"
                   class="form-text text-muted">
                Puede buscar por cedula, apellido o nombre
            </small>
        </div>

    </form>

    <%- include('./tabla-cita',{
    citas: datos.citas
    })
    %>

</div>
<%- include('../shared-views/footer')%>
