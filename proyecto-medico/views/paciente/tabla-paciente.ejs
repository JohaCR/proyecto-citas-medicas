<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Nombre</th>
        <th scope="col">Apellido</th>
        <th scope="col">Fecha De Nacimiento</th>
        <th scope="col">Telefono</th>
        <th scope="col">Direccion</th>
    </tr>
    </thead>
    <tbody  async="true">
    <%     pacientes.forEach( (paciente) => {%>
        <tr>
            <th scope="row"><%= paciente.id%></th>
            <td><%= paciente.nombre%></td>
            <td><%= paciente.apellido%></td>
            <td><%= paciente.fechaDeNacimiento%></td>
            <td><%= paciente.telefono%></td>
            <td><%= paciente.direccion%></td>
            <td>
                <td>
                    <a href="/paciente/editar-paciente/<%= paciente.id %>">
                        <%console.log('Soy el paciente en el ejs paciente para editar: '+paciente.id)%>
                        <button type="button"
                                class="btn btn-info">
                            Editar
                        </button>
                    </a>
                </td>

            <td>
                <a>
                    <form action="/paciente/delete/<%= paciente.id %>"
                          method="POST">
                        <button type="submit"
                                class="btn btn-info">
                            Eliminar
                        </button>
                    </form>
                </a>
            </td>
            <td>
                <a href="/detalle/mostrar-detalle-historial/<%=paciente.id %>">
                    <button type="button"
                            class="btn btn-info">
                        Ver Historial
                    </button>
                </a>
            </td>
            </td>
        </tr>
    <%}); %>
    </tbody>
</table>
